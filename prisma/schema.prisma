generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  authId String @unique
  email  String @unique
  years  Year[]
}

model Year {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  year        Int    @unique
  user        User   @relation(fields: [userId], references: [id])
  userId      String @db.ObjectId
  days        Day[]
  cover_color String
  font_color  String
  page_color  String
}

type Exercise {
  exercise_id    String
  exercise       String
  intensity      String
  reps_completed Int
  reps_targeted  Int
  weight         Int
  weight_unit    Unit
}

enum Unit {
  lbs
  kgs
}

type Note {
  note_id    String
  note       String
  checkable  Boolean
  is_checked Boolean
}

type Food {
  food_id  String
  food     String
  protein  Int
  calories Int
  fat      Int
  sugar    Int
  sodium   Int
}

model Day {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  year      Year       @relation(fields: [yearId], references: [id])
  yearId    String     @db.ObjectId
  day       Int
  title     String
  exercise  Exercise[]
  page      String[]
  note      Note[]
  food      Food[]
  createdAt DateTime   @default(now())
}
